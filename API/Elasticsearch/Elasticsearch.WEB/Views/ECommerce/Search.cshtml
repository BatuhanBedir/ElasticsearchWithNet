@model SearchPageViewModel
@{
    ViewData["Title"] = "Search";
}


<div class="container">
    <div class="row">
        <div class="col-md-3">
            <form asp-action="Search" method="get">
                <div class="mb-3">
                    <label asp-for="ECommerceSearchViewModel.CustomerFullName" class="form-label"></label>
                    <input asp-for="ECommerceSearchViewModel.CustomerFullName" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="ECommerceSearchViewModel.Category" class="form-label"></label>
                    <input asp-for="ECommerceSearchViewModel.Category" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="ECommerceSearchViewModel.Gender" class="form-label"></label>
                    <input asp-for="ECommerceSearchViewModel.Gender" class="form-control" rows="3">
                </div>
                <div class="mb-3">
                    <label asp-for="ECommerceSearchViewModel.OrderDateStart" class="form-label"></label>
                    <input asp-for="ECommerceSearchViewModel.OrderDateStart" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="ECommerceSearchViewModel.OrderDateEnd" class="form-label"></label>
                    <input asp-for="ECommerceSearchViewModel.OrderDateEnd" class="form-control">
                </div>

                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>
        </div>
        <div class="col-md-9">
            <div class="alert alert-success">
                <span>Toplam @Model.TotalCount kayıt bulunmuştur</span>
            </div>
            <table class="table table-striped">
                <thread>
                    <tr>
                        <th>Customer Full Name</th>
                        <th>Order Date</th>
                        <th>Gender</th>
                        <th>Taxful Total Price</th>
                        <th>Category</th>
                        <th>Order Id</th>
                    </tr>
                </thread>
                <tbody>
                    @foreach (var item in Model.List)
                    {
                        <tr>
                            <td>@item.CustomerFullName</td>
                            <td>@item.OrderDate</td>
                            <td>@item.Gender</td>
                            <td>@item.TaxfulTotalPrice</td>
                            <td>@item.Category</td>
                            <td>@item.OrderId</td>
                        </tr>
                    }
                </tbody>

            </table>
            <nav>
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="@Model.CreatePageUrl(Context.Request,1,Model.PageSize)">First</a>
                    </li>
                    @for (int i = Model.StartPage(); i <= Model.EndPage(); i++)
                    {
                        <li class="page-item @(Model.Page==i ? "active" : "")">
                            <a class="page-link" href="@Model.CreatePageUrl(Context.Request,i,Model.PageSize)">@i</a>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="@Model.CreatePageUrl(Context.Request,Model.PageLinkCount,Model.PageSize)">Last</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>